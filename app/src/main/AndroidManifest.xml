<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.cds">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CDS"
        tools:targetApi="31">

        <!-- Teammate's original launcher (preserved as comment) -->
        <!-- <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> -->

        <!-- Login Activity (New Launcher) -->
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Registration Activity -->
        <activity
            android:name=".ui.login.RegisterActivity"
            android:exported="false"
            android:parentActivityName=".ui.login.LoginActivity"
            android:windowSoftInputMode="adjustResize"/>

        <!-- Password Recovery -->
        <activity
            android:name=".ui.login.ForgotPasswordActivity"
            android:exported="false"
            android:parentActivityName=".ui.login.LoginActivity"
            android:windowSoftInputMode="adjustResize"/>

        <!-- Main App Activity -->
        <activity
            android:name=".ui.login.StartActivity"
            android:exported="false"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustResize"/>

        <!-- Profile Activity -->
        <activity
            android:name=".ui.login.ProfileActivity"
            android:exported="false"
            android:parentActivityName=".ui.login.StartActivity"/>

        <!-- Google Services Configuration -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <!-- Firebase Configuration -->
        <meta-data
            android:name="firebase_auth_emulator_host"
            android:value="10.0.2.2:9099"
            tools:replace="android:value"
            tools:ignore="MissingFirebaseInstanceToken"/>
    </application>

    <!-- Internet Permission -->
    <uses-permission android:name="android.permission.INTERNET"/>
</manifest>